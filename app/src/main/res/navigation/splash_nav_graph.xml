<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_nav_graph"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="co.netguru.baby.monitor.client.feature.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/actionSplashToWelcome"
            app:clearTask="true"
            app:destination="@+id/welcomeFragment" />

        <action
            android:id="@+id/actionSplashToClientHome"
            app:destination="@+id/clientHomeActivity" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="co.netguru.baby.monitor.client.feature.welcome.WelcomeFragment"
        android:label="Welcome Fragment"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/actionWelcomeToServer"
            app:clearTask="true"
            app:destination="@+id/serverFragment" />

        <action
            android:id="@+id/actionWelcomeToConfiguration"
            app:destination="@+id/configurationFragment" />
    </fragment>

    <fragment
        android:id="@+id/serverFragment"
        android:name="co.netguru.baby.monitor.client.feature.server.ServerFragment"
        android:label="Server"
        tools:layout="@layout/fragment_server" />

    <fragment
        android:id="@+id/configurationFragment"
        android:name="co.netguru.baby.monitor.client.feature.client.configuration.ConfigurationFragment"
        android:label="Configuration"
        tools:layout="@layout/fragment_configuration">

        <action
            android:id="@+id/actionConfigurationToConfiguring"
            app:destination="@+id/configuringBabyFragment" />

        <action
            android:id="@+id/actionConfigurationClientHome"
            app:destination="@+id/clientHomeActivity" />
    </fragment>

    <fragment
        android:id="@+id/configuringBabyFragment"
        android:name="co.netguru.baby.monitor.client.feature.client.configuration.ConfigurationBabyFragment"
        android:label="Configuring Baby"
        tools:layout="@layout/fragment_configuring_baby">
        <action
            android:id="@+id/actionConfiguringClientHome"
            app:destination="@+id/clientHomeActivity" />
    </fragment>

    <activity
        android:id="@+id/clientHomeActivity"
        android:name="co.netguru.baby.monitor.client.feature.client.home.ClientHomeActivity"
        android:label="Client Home"
        tools:layout="@layout/activity_client_home" />
</navigation>
