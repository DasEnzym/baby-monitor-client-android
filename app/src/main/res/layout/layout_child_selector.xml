<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/clientHomeChildrenEll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:el_expanded="false"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeChildrenCoverLl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:el_expanded="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/clientHomeChildrenRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_dark"
            android:layout_weight="0"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </net.cachapa.expandablelayout.ExpandableLayout>

    <LinearLayout
        android:id="@+id/clientHomeChildrenCoverLl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_a60"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeChildrenEll"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
