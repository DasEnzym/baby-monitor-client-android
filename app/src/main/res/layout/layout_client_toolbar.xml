<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clientHomeToolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/primary_dark"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"
    app:layout_constraintVertical_chainStyle="spread_inside">

    <LinearLayout
        android:id="@+id/clientHomeChildLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/clientHomeChildMiniatureIv"
            android:layout_width="@dimen/spacing_xxmedium"
            android:layout_height="@dimen/spacing_xxmedium"
            android:layout_margin="@dimen/spacing_small"
            android:src="@drawable/ripple" />

        <TextView
            android:id="@+id/clientHomeChildTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/averta"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal"
            tools:text="Jane" />

        <ImageView
            android:id="@+id/clientHomeChildAvailabilityIv"
            android:layout_width="@dimen/spacing_xmedium"
            android:layout_height="@dimen/spacing_xmedium"
            android:visibility="gone"
            android:layout_weight="0"
            android:layout_marginStart="@dimen/spacing_small"
            tools:background="@color/material_red_a400" />

        <ImageView
            android:id="@+id/clientHomeArrowIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:tint="@color/white"
            android:src="@drawable/ic_keyboard_arrow_down_gray_24dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/clientHomeToolbarAddChildAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_xmedium"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@null"
        android:padding="@dimen/spacing_xxsmall"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/clientHomeToolbarSpacingLl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xxxsmall"
        android:background="@color/transparent_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />


</android.support.constraint.ConstraintLayout>

