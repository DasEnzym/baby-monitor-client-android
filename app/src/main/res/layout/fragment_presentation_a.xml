<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/presentationAIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:src="@drawable/feature_a"
        app:layout_constraintBottom_toTopOf="@+id/presentationATv1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/presentationATv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxmedium"
        android:fontFamily="@font/averta_bold"
        android:gravity="center"
        android:text="@string/presentation_a_text_1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toTopOf="@+id/presentationATv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presentationAIv" />

    <TextView
        android:id="@+id/presentationATv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xmedium"
        android:fontFamily="@font/averta"
        android:gravity="center"
        android:text="@string/presentation_a_text_2"
        android:textColor="@color/presentation_text_color"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presentationATv1" />

</android.support.constraint.ConstraintLayout>
