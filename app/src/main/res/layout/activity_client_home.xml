<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/clientHomeFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeBnv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeToolbar" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/clientHomeBnv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="@dimen/spacing_xmedium"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeFrameLayout"
        app:menu="@menu/home_menu" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/clientHomeToolbar"
        android:background="@color/primary_dark"
        app:backgroundTint="@color/primary_dark"
        android:layout_width="match_parent"
        app:elevation="@dimen/spacing_xxsmall"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
