<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_xmedium"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/itemAddChildContainerLl"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/itemAddChildAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xmedium"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@drawable/ripple"
        android:padding="@dimen/spacing_xxsmall"
        android:src="@drawable/ic_add_white_24dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/add_another_baby"
        android:textColor="@color/accent" />

</LinearLayout>
