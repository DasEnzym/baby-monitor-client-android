<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:focusableInTouchMode="false">

    <ImageView
        android:id="@+id/dashboardShapesIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:src="@drawable/shapes"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeBabyNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/clientHomeBabyIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:padding="@dimen/spacing_xxmedium"
        android:src="@drawable/child_large"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/dashboardShapesIv"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/dashboardShapesIv"
        app:layout_constraintStart_toStartOf="@+id/dashboardShapesIv"
        app:layout_constraintTop_toTopOf="@+id/dashboardShapesIv" />

    <TextView
        android:id="@+id/clientHomeBabyNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="Your baby name"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_size_huge"
        app:layout_constraintBottom_toTopOf="@+id/clientConnectionStatusTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboardShapesIv"
        app:met_floatingLabel="none" />

    <TextView
        android:id="@+id/clientConnectionStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintEnd_toStartOf="@+id/clientConnectionStatusPv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeBabyNameTv"
        tools:text="Devices disconnected" />

    <co.netguru.baby.monitor.client.common.view.PulsatingView
        android:id="@+id/clientConnectionStatusPv"
        android:layout_width="@dimen/spacing_xxxmedium"
        android:layout_height="@dimen/spacing_xxxmedium"
        app:activeColor="@color/active_pulsating"
        app:circleSize="@dimen/spacing_small"
        app:inactiveColor="@color/inactive_pulsating"
        app:layout_constraintBottom_toBottomOf="@+id/clientConnectionStatusTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientConnectionStatusTv"
        app:layout_constraintTop_toTopOf="@+id/clientConnectionStatusTv" />

    <ImageButton
        android:id="@+id/clientHomeLiveCameraIbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_xxnormal"
        android:src="@drawable/baby_preview"
        app:backgroundTint="@color/transparent"
        app:elevation="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clientHomeActivityLogIbtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientConnectionStatusTv" />

    <ImageButton
        android:id="@+id/clientHomeActivityLogIbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity"
        app:backgroundTint="@color/transparent"
        app:elevation="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintTop_toTopOf="@+id/clientHomeLiveCameraIbtn" />

    <ProgressBar
        android:id="@+id/clientHomeDashboardPb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
