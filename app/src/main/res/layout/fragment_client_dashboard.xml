<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/clientHomeBabyIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/all_circle_white_bg"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeBabyNameMet"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add photo"
        app:layout_constraintBottom_toBottomOf="@+id/clientHomeBabyIv"
        app:layout_constraintEnd_toEndOf="@+id/clientHomeBabyIv"
        app:layout_constraintStart_toStartOf="@+id/clientHomeBabyIv"
        app:layout_constraintTop_toTopOf="@+id/clientHomeBabyIv" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/clientHomeBabyNameMet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxxmedium"
        android:layout_marginTop="@dimen/spacing_xmedium"
        android:layout_marginEnd="@dimen/spacing_xxxmedium"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:gravity="center"
        android:hint="@string/client_baby_name_input_hint"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeInformationTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeBabyIv"
        app:met_floatingLabel="normal"
        tools:text="Son" />

    <TextView
        android:id="@+id/clientHomeInformationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/client_dashboard_welcome_text"
        app:layout_constraintBottom_toTopOf="@+id/clientHomeGl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeBabyNameMet" />

    <android.support.constraint.Guideline
        android:id="@+id/clientHomeGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <ImageButton
        android:id="@+id/clientHomeLiveCameraIbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:elevation="@dimen/spacing_small"
        android:padding="@dimen/spacing_xmedium"
        android:src="@drawable/ic_videocam_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clientHomeTalkIbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeGl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="live camera"
        android:layout_marginTop="@dimen/spacing_small"
        android:textAllCaps="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintStart_toStartOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeLiveCameraIbtn" />

    <ImageButton
        android:id="@+id/clientHomeTalkIbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:elevation="@dimen/spacing_small"
        android:padding="@dimen/spacing_xmedium"
        android:src="@drawable/ic_mic_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clientHomePlayLullabyIbtn"
        app:layout_constraintStart_toEndOf="@+id/clientHomeLiveCameraIbtn"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeGl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="talk"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/spacing_small"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clientHomeTalkIbtn"
        app:layout_constraintStart_toStartOf="@+id/clientHomeTalkIbtn"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeTalkIbtn" />

    <ImageButton
        android:id="@+id/clientHomePlayLullabyIbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:elevation="@dimen/spacing_small"
        android:padding="@dimen/spacing_xmedium"
        android:src="@drawable/ic_music_note_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientHomeTalkIbtn"
        app:layout_constraintTop_toBottomOf="@+id/clientHomeGl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play lullaby"
        android:layout_marginTop="@dimen/spacing_small"
        android:textAllCaps="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clientHomePlayLullabyIbtn"
        app:layout_constraintStart_toStartOf="@+id/clientHomePlayLullabyIbtn"
        app:layout_constraintTop_toBottomOf="@+id/clientHomePlayLullabyIbtn" />

</android.support.constraint.ConstraintLayout>
